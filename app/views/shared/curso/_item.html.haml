%div{:style => "height:16px; width: 2px; background: #ebebeb; margin: 0 auto;"}
%table{:style => "text-align: left;width:100%;table-layout:fixed;border-collapse:collapse; font-weight:bold; display:table; border-spacing: 2px; border-color: gray"}
  %tbody{:style => "display: table-row-group; vertical-align: middle; border-color: inherit;"}
    %tr{:style => "display: table-row; vertical-align: inherit; border-color: inherit;height:50px"}
      -if item.class.name == 'Formacion'
        %td{:style => "width: 35%; padding:0;display: table-cell; vertical-align: inherit"}
          %div{:style => "height:24px; position: relative; display:block"}
            %div{:style => "position: absolute; top: -5px; bottom 0; left: -15px; right:0; text-align: right"}
              %table{:style => "table-layout: fixed; width: 100%; height:100%; float:right; border-collapse: collapse; display:table; border-spacing: 2px; border-color: gray; text-align: right;"}
                %tbody{:style => "table-row-group; vertical-align: middle;border-color:inherit"}
                  %tr{:style => "display:table-row;vertical-align:inherit; border-color: inherit"}
                    %td{:style => "padding: 0 8px; display: table-cell; vertical-align: inherit;text-align:right"}
                      %div{:style => "overflow:hidden; text-overflow: ellipsis; white-space: nowrap; display:block; text-align:right"}
                        -if item.respond_to?(:titulo)
                          =item.titulo
                      %div{:style => "overflow:hidden; text-overflow: ellipsis; white-space: nowrap; display:block;text-align: right; float:right; border-collapse: collapse; font-size: 11.5px; font-weight: normal"}
                        -if item.respond_to?(:lugar)
                          =item.lugar
                    %td{:style => "float:right; border-collapse: collapse; text-align:center;padding:0;width: 64px"}
                      = link_to(image_tag(Foto.find_by_id(item.foto_id).nombre_archivo, :style => 'width:64px;height:auto;'), '#')
      %td{:style => "line-height: 1.2;font-weight:bold;width: 20%;table-layout:fixed; border-collapse:collapse;text-align:center;overflow:hidden; display:table-cell; vertical-align: inherit"}
        -if item.respond_to?(:hasta)
          -if item.hasta.nil? == false
            =item.hasta.year
      %td{:style => "width: 35%; padding:0;display: table-cell; vertical-align: inherit"}
        -if item.class.name == 'Experiencium'
          %div{:style => "height:24px; position: relative; display:block"}
            %div{:style => "position: absolute; top: -5px; bottom 0; left: -15px; right:0; text-align: right"}
              %table{:style => "table-layout: fixed; width: 100%; height:100%; float:right; border-collapse: collapse; display:table; border-spacing: 2px; border-color: gray; text-align: right;"}
                %tbody{:style => "table-row-group; vertical-align: middle;border-color:inherit"}
                  %tr{:style => "display:table-row;vertical-align:inherit; border-color: inherit"}
                    %td{:style => "float:right; border-collapse: collapse; text-align:center;padding:0;width: 64px"}
                      = link_to(image_tag(Foto.find_by_id(item.foto_id).nombre_archivo, :style => 'width:64px;height:auto;'), '#')
                    %td{:style => "padding: 0 8px; display: table-cell; vertical-align: inherit;text-align:right"}
                      %div{:style => "overflow:hidden; text-overflow: ellipsis; white-space: nowrap; display:block; text-align:left"}
                        -if item.respond_to?(:titulo)
                          =item.titulo
                      %div{:style => "overflow:hidden; text-overflow: ellipsis; white-space: nowrap; display:block;text-align: right; float:left; border-collapse: collapse; font-size: 11.5px; font-weight: normal"}
                        -if item.respond_to?(:lugar)
                          =item.lugar


-#%div{:style => "overflow:auto; min-height:10%;border: solid 1px #dfdfdf; color: #686868; font: 13px Arial; margin:5%;width: 90%;font-size: 333x;font-family:Verdana"}
  %div{:style => "padding:1 1px; background-color:#f5f5f5"}
    -#%div{:style =>  "width:30%;float:left; padding: 10px; display: inline-flex"}
    = link_to(image_tag(Foto.find_by_id(item.foto_id).nombre_archivo, :style => 'width:15%;height:auto;float:left;margin:1%'), '#')


  %div{:style => "color: #686868;margin:5px; font-size: 1em; padding-bottom:6px"}


    -if item.respond_to?(:titulo)
      %p=item.titulo

    -if item.respond_to?(:empresa)
      %p=item.empresa

    -if item.respond_to?(:idioma)
      %p=item.idioma

    -if item.respond_to?(:software)
      %p=item.software

    -if item.respond_to?(:tema)
      %p=item.tema

  %div{:style => "float:left;width:100%; background-color: #f5f5f5;" }
    -#%div{:style =>"width: auto;float:left; background-color:yellow"}
    -#-@edicion = Edicione.select { |ed| ed.edicion == 'todas' }
    -#-if @edicion.count > 0
      -@edicion.each do |ed|
        -#%div{:style => "width:15%; float:left"}
        = link_to(image_tag(ed.url,:width=> '5%',:style => 'border-style:none;margin:1%;width:10%;float:left' ), ed.createspace)


