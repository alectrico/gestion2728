
%div{:style => "height:16px; width: 2px; background: #ebebeb; margin: 0 auto;"}
%table{:style => "text-align: left;width:100%;table-layout:fixed;border-collapse:collapse; font-weight:bold; display:table; border-spacing: 2px; border-color: gray"}
  %tbody{:style => "display: table-row-group; vertical-align: middle; border-color: inherit;"}
    %tr{:style => "display: table-row; vertical-align: inherit; border-color: inherit;height:50px"}
      %td{:style => "width: 50%; padding:0;display: table-cell; vertical-align: inherit"}
        -if item_cv_crono.class.name == 'Formacion' or item_cv_crono.class.name == 'Informatica'

          %div{:style => "height:24px; position: relative; display:block"}
            %div{:style => "position: absolute; top: 1px; bottom 0;  right:0; text-align: right"}
              %table{:style => "table-layout: fixed; width: 100%; height:100%; float:right; border-collapse: collapse; display:table; border-spacing: 2px; border-color: gray; text-align: right;"}
                %tbody{:style => "table-row-group; vertical-align: middle;border-color:inherit"}
                  %tr{:style => "display:table-row;vertical-align:inherit; border-color: inherit"}
                    %td{:style => "#{item_cv_crono.color};padding: 0 0px; display: table-cell; vertical-align: inherit;text-align:right"}
                      -#iv{:style => "overflow:hidden; text-overflow: ellipsis; white-space: nowrap; display:block; text-align:right"}
                      -#%div{:style => "float:right; border-collapse: collapse; text-align:center;padding:0;width: 64px"}
                        -#= link_to(image_tag("th-alexsoftlog.png",:width => "40px"), "##{item_cv_crono.id.to_s}")


                      -if item_cv_crono.respond_to?(:titulo)
                        =item_cv_crono.titulo

                      -if item_cv_crono.respond_to?(:software)
                        =item_cv_crono.software

                      %div{:style => "overflow:hidden; text-overflow: ellipsis; white-space: nowrap; display:block;text-align: right; float:right; border-collapse: collapse; font-size: 11.5px; font-weight: normal"}
                        -if item_cv_crono.respond_to?(:lugar)
                          =item_cv_crono.lugar
                      -#= link_to(image_tag(Foto.find_by_id(item_cv_crono.foto_id).nombre_archivo, :style => 'width:64px;height:auto;'), '#')
      %td{:style => "line-height: 1.2;font-weight:bold;width: 40px;table-layout:fixed; border-collapse:collapse;text-align:center;overflow:hidden; display:table-cell; vertical-align: inherit"}
        -if item_cv_crono.respond_to?(:final)
          -if item_cv_crono.final.nil? == false
            =item_cv_crono.final.year
      %td{:style => "width: 50%; padding:0;display: table-cell; vertical-align: inherit"}
        -if item_cv_crono.class.name == 'Experiencium' or item_cv_crono.class.name == 'Idioma' or item_cv_crono.class.name == 'Otro'


          %div{:style => "height:24px; position: relative; display:block"}
            %div{:style => "position: absolute; top: 1px; bottom 0; right:0; text-align: right"}
              %table{:style => "table-layout: fixed; width: 100%; height:100%; float:right; border-collapse: collapse; display:table; border-spacing: 2px; border-color: gray; text-align: right;"}
                %tbody{:style => "table-row-group; vertical-align: middle;border-color:inherit"}
                  %tr{:style => "#{item_cv_crono.color};display:table-row;vertical-align:inherit; border-color: inherit"}
                    -#%td{:style => " border-collapse: collapse; text-align:center;padding:0;width: 64px"}
                      = link_to(image_tag("th-alexsoftlog.png",:width => "40px"), "##{item_cv_crono.id.to_s}")
                      -#= link_to(image_tag(Foto.find_by_id(item_cv_crono.foto_id).nombre_archivo, :style => 'width:64px;height:auto;'), '#')
                    %td{:style => "padding: 0 8px; display: table-cell; vertical-align: inherit;text-align:right"}
                      %div{:style => "overflow:hidden; text-overflow: ellipsis; white-space: nowrap; display:block; text-align:left"}
                        -if item_cv_crono.respond_to?(:titulo)
                          =item_cv_crono.titulo
                        -if item_cv_crono.respond_to?(:tema)
                          =item_cv_crono.tema
                        -if item_cv_crono.respond_to?(:empresa)
                          =item_cv_crono.empresa

                      %div{:style => "overflow:hidden; text-overflow: ellipsis; white-space: nowrap; display:block;text-align: right; float:left; border-collapse: collapse; font-size: 11.5px; font-weight: normal"}
                        -if item_cv_crono.respond_to?(:dominio)
                          =item_cv_crono.dominio
                        -if item_cv_crono.respond_to?(:cargo)
                          =item_cv_crono.cargo

                        -if item_cv_crono.respond_to?(:relevancia)
                          =item_cv_crono.relevancia

