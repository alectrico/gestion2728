="-X-" if user.nil?
-unless user.nil?
  %a.btn.btn-micro.btn-grey.comment-reply-btn{:href => resume_user_url(user),:data => {toggle: "modal", target: "#usuario-modal_edit#{user.id}" }}
    %i.glyphicon.glyphicon-share-alt
      Edit
  -unless user.nil?
    -if user.admin?
      %span.glyphicon.glyphicon-eye-open
    -if user.client?
      %span.glyphicon.glyphicon-copyright-mark
    -if user.member?
      -@miembro=user
      %span.glyphicon.glyphicon-user
    -if user.alumno?
      %span.glyphicon.glyphicon-pencil
    -if user.instalador?
      %span.glyphicon.glyphicon-wrench
    -if user.profesor?
      %span.glyphicon.glyphicon-briefcase
    -if user.paye?
      %span.glyphicon.glyphicon-usd


  -#ink_to "edit",edit_miembro_url(user),:data => { toggle: "modal", target: "#usuario-modal_edit#{user.id}" }, :class => "btn btn-small"

  .modal.fade{:id => "usuario-modal_edit#{user.id}",:tabindex => "-1",:role => "dialog",:back_drop => true}
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
          %h3.modal-title Espere un momento
        .modal-body
          .modal-body-content
            .ajax-loader
              cargando...
        .modal-footer
          %button.btn{"data-dismiss" => "modal", :type => "button"} Cerrar


  =link_to user.name,user_url(user),:data => { toggle: "modal", target: "#usuario-modal#{user.id}" }

  .modal.fade{:id => "usuario-modal#{user.id}",:tabindex => "-1",:role => "dialog",:back_drop => true}
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
          %h3.modal-title Espere un momento
        .modal-body
          .modal-body-content
            .ajax-loader
              cargando...
        .modal-footer
          %button.btn{"data-dismiss" => "modal", :type => "button"} Cerrar

