
%div{:style => "background-color: cornsilk; margin-top: 40px;width: 100%;heigth:350px"}
  %div{:style => "#{item_cv_cuadrado.color}; height:105px"} 
    -if item_cv_cuadrado.foto_id != nil and Foto.exists?(item_cv_cuadrado.foto_id)
      - foto = Foto.find(item_cv_cuadrado.foto_id)
      .column{:draggable => :false,:style => "float:left;overflow:hidden;  height:100px; border: 2px solid #666666; background-color: #ccc; margin-right: 5px; -webkit-border-radius: 10px; -ms-border-radius: 10px; -moz-border-radius: 10px; border-radius: 10px; -webkit-box-shadoww: inset 0 0 3px #000; -ms-box-shadow: inset 0 0 3px #000; box-shadow: inset 0 0 3px #000; text-align: center;margin: 10px; margin-top: -1px;width: 150px "}
        -if not foto.nombre_archivo.blank?
          =image_tag(foto.nombre_archivo,:width => "100%",:style => "width:100%")

    %div
      %div
        -#%table
        -#%tr
        -#%td{:style=>"font-family:Arial,Helvetica,sans-serif;font-weight:bold;margin:5px"}
        %span{:style=>"font-family:Arial,Helvetica,sans-serif;font-size:13px;font-weight:bold;margin:5px"}

          -if item_cv_cuadrado.respond_to?(:titulo)
            ="#{item_cv_cuadrado.titulo},  #{item_cv_cuadrado.lugar}"
          -if item_cv_cuadrado.respond_to?(:empresa)
            ="#{item_cv_cuadrado.cargo} en #{item_cv_cuadrado.empresa}"
        %span{:style=>"font-family:Arial,Helvetica,sans-serif;font-size:10px;font-weight:normal;margin:5px"}

          =item_cv_cuadrado.ciudad
          &nbsp;|&nbsp;
          =item_cv_cuadrado.pais
  %div{:style => "font-size: 12px; padding: 15px"}
    =item_cv_cuadrado.descripcion
