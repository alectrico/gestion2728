      %li= link_to('<span class="glyphicon glyphicon-list"></span> Criterios'.html_safe, gestion_criterios_path)

    -elsif current_user.auditor
      %li= link_to('<span class="glyphicon glyphicon-camera"></span> Evidencias'.html_safe, gestion_evidencias_path)

  - else
    %li= link_to('<span class="glyphicon glyphicon-home"></span> Home'.html_safe, root_path)
    %li= link_to('<span class="glyphicon glyphicon-phone-alt"></span> Contacto'.html_safe, contacto_path)
    %li= link_to('<span class="glyphicon glyphicon-info-sign"></span> About'.html_safe, about_path)

-#%ul.nav.navbar-nav.navbar-right
