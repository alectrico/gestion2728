%ul.nav.navbar-nav
  -if current_user

    -if current_user.admin
      -if user_session["role"] == '1'
        %li= link_to('<span class="glyphicon glyphicon-camera"></span><col-hidden-xs> Evidencias </col-hidden-xs>'.html_safe, gestion_evidencias_path)

         
      %li= link_to('<span class="glyphicon glyphicon-education"></span> OTEC'.html_safe, gestion_registros_path)
